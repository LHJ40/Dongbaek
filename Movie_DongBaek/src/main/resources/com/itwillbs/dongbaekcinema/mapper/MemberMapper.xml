<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.itwillbs.dongbaekcinema.mapper.MemberMapper">
<!--   <cache-ref namespace=""/> -->

	<!-- 로그인, 관리자 페이지 - 회원 한명 id 조회   -->
	<select id="selectStudent" resultType="com.itwillbs.dongbaekcinema.vo.MemberVO">
		SELECT * 
		FROM MEMBERS
		WHERE member_id = #{member_id}
	</select>
	
	<!-- 로그인 페이지 - id, pass 일치 여부 조회 -->
	<select id="CorrectMember" resultType="com.itwillbs.dongbaekcinema.vo.MemberVO">
		SELECT * 
		FROM MEMBERS
		WHERE member_id = #{member_id} AND member_pass = #{member_pass}
	</select>
	
	<!-- 회원가입 페이지(join) - 입력받은 회원 정보 DB에 삽입 -->
	<insert id="joinMember">
		INSERT INTO MEMBERS
		VALUES (
			#{member_id}
			, #{member_pass}
			, #{member_name}
			, #{member_email}
			, #{member_birth}
			, #{member_date}
			, #{member_phone}
			, #{member_status}
			, #{member_agree_marketing}
			, #{member_withdrawl}
			, #{member_type}
			, #{member_like_genre}
			)
	</insert>
	
	
	<!-- 관리자페이지 - 회원 전체 조회해서 뿌리기 -->
	<select id="selectMemberList" resultType="com.itwillbs.dongbaekcinema.vo.MemberVO">
		SELECT *
			FROM MEMBERS
	</select>
	
	
	
</mapper>
